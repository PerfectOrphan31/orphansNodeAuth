extends ./layout/layout

block content
  h1 This is the Registration Page
  h2 Register
  if errors
    each error in errors
      .error
        p= error.msg
        
  form(method="post" action="/users/register")
    .form-group
      label(for="name") Name:
      input.form-control(type="text", name="name" placeholder="Name")
    .form-group
      label(for="username") Username:
      input.form-control(type="text", name="username" placeholder="Username")
    .form-group
      label(for="email") Email:
      input.form-control(type="email", name="email" placeholder="Email@example.com")
    .form-group
      label(for="password") Password:
      input.form-control(type="password", name="password" placeholder="password")
    .form-group
      label(for="passwordConf") Confirm Password:
      input.form-control(type="password", name="passwordConf" placeholder="Enter your password again")
    button.btn_btn-default(type="submit") Submit